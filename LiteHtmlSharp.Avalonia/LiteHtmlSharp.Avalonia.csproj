<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0</TargetFrameworks>
    <Nullable>disable</Nullable>
    <Version>2.0.0-preview2</Version>
    <Authors>Matthew Little</Authors>
    <Company>Pingman Tools</Company>
    <Description>Avalonia UI drawing backend for LiteHtmlSharp</Description>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/PingmanTools/LiteHtmlSharp/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PingmanTools/LiteHtmlSharp/</RepositoryUrl>
    <PackageTags>litehtml litehtmlsharp html render avalonia crossplatform</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.3.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LiteHtmlSharp\LiteHtmlSharp.csproj" />
  </ItemGroup>

  <Import Project="..\LiteHtmlSharp.Shared\LiteHtmlSharp.Shared.projitems" Label="Shared" />

  <ItemGroup Condition="$([MSBuild]::IsOsPlatform('Windows'))">
    <None Include="..\runtimes\win-x64\native\*" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\runtimes\win-x86\native\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsOsPlatform('OSX'))">
    <None Include="..\runtimes\osx-x64\native\*" CopyToOutputDirectory="PreserveNewest" />
    <None Include="..\runtimes\osx-arm64\native\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>